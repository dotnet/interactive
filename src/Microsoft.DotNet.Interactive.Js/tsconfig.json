{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom",
      "ScriptHost"
    ],
    "declaration": false,
    "noImplicitAny": true,
    "module": "commonJs",
    "target": "es6",
    "allowJs": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "types": [
      "node",
      "mocha",
      "node-fetch",
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/common/tests/integration",
    "src/common/tests/unit/vscode",
    "src/common/vscode"
  ]
}